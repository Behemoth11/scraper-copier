{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "incremental": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src" ],
  "exclude": ["src/**/*.test.ts"],
  "lib":"es2015",
}
